<h1>Posts</h1>
<%= link_to "New Post", new_admin_post_path %>
<table>
  <thead>
    <tr>
      <th>Post Title</th>
      <th>Tasks</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td>
          <%= link_to "Edit", edit_admin_post_path(post) %> | 
          <%= link_to "Delete", admin_post_path(post), method: :delete, confirm: "Are you sure?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
